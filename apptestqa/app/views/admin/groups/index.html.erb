<h1>Listing groups</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Description</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @groups.each do |group| %>
      <tr>
        <td><%= group.description %></td>
        <td><%= link_to 'Edit', edit_admin_group_path(group) %></td>
        <td><%= link_to 'Destroy', admin_group_path(group), method: :delete, data: { confirm: 'Are you sure?' } %></td>
    <% end %>
  </tbody>
</table>

<br>

<button  class="btn"><%= link_to 'New Group', new_admin_group_path %></button>
