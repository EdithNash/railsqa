<div class="container-fluid">
  <h1>Listing Priorities</h1>

  <table class="table table-striped">
    <thead>
      <tr>
        <th>Description</th>
        <th></th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <% @priority.each do |priorities| %>
        <tr>
          <td><%= priorities.description %></td>
          <td><%= link_to 'Edit', edit_admin_priority_path(priorities) %></td>
          <td><%= link_to 'Destroy', admin_priority_path(priorities)  , method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <button  class="btn"><%= link_to 'New priority', new_admin_priority_path %></button>
</div>
