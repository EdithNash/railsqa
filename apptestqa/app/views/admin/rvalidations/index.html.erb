<div class="container-fluid">
  <h1>Listing rvalidations</h1>

  <table class="table table-striped">
    <thead>
      <tr>
        <th>Description</th>
        <th></th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <% @rvalidation.each do |rvalidations| %>
        <tr>
          <td><%= rvalidations.description %></td>
          <td><%= link_to 'Edit', edit_admin_rvalidation_path(rvalidations) %></td>
          <td><%= link_to 'Destroy', admin_rvalidation_path(rvalidations)  , method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <button  class="btn"><%= link_to 'New rvalidation', new_admin_rvalidation_path %></button>
</div>

